@model EmployeeViewModel
@{
    ViewData["Title"] = "All employees";
}
<div class="p-4 container">
    <div class="row p-4">
        <div class="col-md-12">
            <h3>Add new employee</h3>
        </div>
    </div>
    <div class="row p-4">
        <div class="col-md-6">
            <form asp-controller="Employee" asp-action="Add" method="post">
                <div class="mb-3">
                    <label for="FirstName" class="form-label fw-bold">First Name</label>
                    <input asp-for="Employee.FirstName" type="text" class="form-control">
                </div>  
                <div class="mb-3">
                    <label for="LastName" class="form-label fw-bold">Last Name</label>
                    <input asp-for="Employee.LastName" type="text" class="form-control" >
                 </div>
                <div class="mb-3">
                    <label for="datetimepicker" class="form-label fw-bold">Date of Birth</label>
                    <input asp-for="Employee.DateOfBirth" type="date" class="form-control"/>
                </div>
                <div class="mb-3">
                    <label for="Gender" class="form-label fw-bold">Gender</label>
                    <div class="d-flex">
                        <div class="form-check px-4">
                            <input asp-for="Employee.Gender" class="form-check-input" value="male" type="radio">
                            <label class="form-check-label fw-bold" for="Gender">
                                Male
                            </label>
                        </div>
                        <div class="form-check px-4">
                            <input asp-for="Employee.Gender" class="form-check-input" value="female" type="radio" checked>
                            <label class="form-check-label fw-bold" for="Gender">
                                Female
                            </label>
                        </div>
                    </div>
                </div>
                 <div class="mb-3">
                    <label for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Employee.Email" type="email" class="form-control">
                 </div>
                 <div class="mb-3">
                    <label for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                    <input asp-for="Employee.PhoneNumber" type="number" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="Address" class="form-label fw-bold">Address</label>
                    <textarea asp-for="Employee.Address" class="form-control" rows="3"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Please choose department</label>
                    <select asp-for="Employee.DepartmentId"></select>
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="Employee.IsActive" class="form-check-input" type="checkbox" id="isActive" checked>
                        <label class="form-check-label fw-bold" for="isActive">Mark as Active</label>
                    </div>
                 </div>
                <button type="submit" class="btn btn-dark">Submit</button>

            </form>
        </div>
   </div>
</div>