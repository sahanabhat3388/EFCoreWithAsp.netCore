@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "All Employees";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3 class="p-4">All Employees</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form class="d-flex" asp-action="Index" asp-controller="Employee">
                <input name="searchString" class="form-control me-1" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-dark" type="submit">Search by name</button>
            </form>
        </div>
        <div class="col-md-6">
            <a asp-action="Index" class="text-dark">Back to Full List</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 p-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col"><a class="text-dark" asp-controller="Employee" asp-action="Index" asp-route-sortOrder=@ViewData["NameSortParam"]>FirstName</a></th>
                        <th scope="col">LastName</th>
                        <th scope="col"><a asp-action="Index" asp-route-sortOrder="@ViewData["DateOfBirthSortParm"]" class="text-dark">DateOfBirth</a></th>
                        <th scope="col">Gender</th>
                        <th scope="col">Email</th>
                        <th scope="col">PhoneNumber</th>
                        <th scope="col">Address</th>
                        <th scope="col"><a asp-action="Index" asp-route-sortOrder="@ViewData["IsActiveSortParam"]" class="text-dark">IsActive</a></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <th scope="row">@employee.EmployeeId</th>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.DateOfBirth</td>
                            <td>@employee.Gender</td>
                            <td>@employee.Email</td>
                            <td>@employee.PhoneNumber</td>
                            <td>@employee.Address</td>
                            <td>@employee.IsActive</td>
                            <td><a class="btn btn-dark" asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.EmployeeId">Edit</a></td>
                            <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.EmployeeId" onClick="return confirm('Are you sure you want to delete this employee?')">Delete</a></td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>